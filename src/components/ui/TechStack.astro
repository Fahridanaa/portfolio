---
interface Props {
	iconName: string;
}

const { iconName } = Astro.props;
---

<div
	class="flex justify-center items-center gap-2 text-white border py-1 px-4 rounded-lg bg-[#2E5C37] border-[#2E5C37] cursor-default">
	<i
		class=`devicon-${iconName.toLowerCase()}-original devicon-${iconName.toLowerCase()}-plain text-xl md:text-2xl lg:text-3xl`
	></i>
	<p class="text-lg md:text-xl lg:text-2xl font-regular">{iconName}</p>
</div>
