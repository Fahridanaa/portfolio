---
interface Props {
	iconName: string;
}

const { iconName } = Astro.props;
---

<div
	class="flex justify-center items-center gap-1 text-[#2E5C37] border px-4 py-2 rounded-md border-[#2E5C37] cursor-default">
	<div class="relative block mr-1">
		<img
			src={`/public/assets/icons/${iconName.toLowerCase()}.svg`}
			alt={`${iconName}`}
			class="w-6 h-6 md:w-8 md:h-8"
		/>
	</div>
	<p class="text-lg md:text-xl lg:text-2xl font-semibold text-[#2E5C37]">
		{iconName}
	</p>
</div>
