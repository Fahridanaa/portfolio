<script is:inline>
	document.addEventListener("DOMContentLoaded", () => {
		const avatarRevealEls = document.querySelectorAll(
			"[data-avatar-reveal]"
		);
		const robloxBtn = document.getElementById("roblox-btn");

		const updatePosition = (wrapper, event) => {
			if (wrapper.dataset.easterEgg === "true") return;

			const rect = wrapper.getBoundingClientRect();
			const x = ((event.clientX - rect.left) / rect.width) * 100;
			const y = ((event.clientY - rect.top) / rect.height) * 100;
			const radius = Math.max(rect.width, rect.height) * 0.35;

			wrapper.style.setProperty("--reveal-x", `${x}%`);
			wrapper.style.setProperty("--reveal-y", `${y}%`);
			wrapper.style.setProperty("--reveal-size", `${radius}px`);
		};

		avatarRevealEls.forEach((wrapper) => {
			wrapper.dataset.revealActive = "false";
			wrapper.dataset.easterEgg = "false";

			const handleEnter = (event) => {
				if (wrapper.dataset.easterEgg === "true") return;

				wrapper.dataset.revealActive = "true";
				updatePosition(wrapper, event);
			};

			const handleMove = (event) => updatePosition(wrapper, event);

			const handleLeave = () => {
				if (wrapper.dataset.easterEgg === "true") return;

				wrapper.dataset.revealActive = "false";
				wrapper.style.setProperty("--reveal-size", "0px");
			};

			wrapper.addEventListener("pointerenter", handleEnter);
			wrapper.addEventListener("pointermove", handleMove);
			wrapper.addEventListener("pointerleave", handleLeave);
		});

		if (robloxBtn && avatarRevealEls.length) {
			robloxBtn.addEventListener("click", () => {
				const isActive =
					avatarRevealEls[0].dataset.easterEgg === "true";
				const nextState = isActive ? "false" : "true";

				avatarRevealEls.forEach((wrapper) => {
					wrapper.dataset.easterEgg = nextState;

					if (nextState === "true") {
						wrapper.dataset.revealActive = "true";
						const rect = wrapper.getBoundingClientRect();
						const maxRadius = Math.hypot(rect.width, rect.height);
						wrapper.style.setProperty(
							"--reveal-size",
							`${maxRadius}px`
						);
						wrapper.style.setProperty("--reveal-x", "50%");
						wrapper.style.setProperty("--reveal-y", "50%");
					} else {
						wrapper.dataset.revealActive = "false";
						wrapper.style.setProperty("--reveal-size", "0px");
					}
				});
			});
		}
	});
</script>

